{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unreachable": 1,
    "eqeqeq": 1,
    "no-multiple-empty-lines": 1,
    "no-trailing-spaces": 1,
    "no-whitespace-before-property": 1,
    "keyword-spacing": 1,
    "space-before-blocks": 1
  }
}